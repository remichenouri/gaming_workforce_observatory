# Gaming Workforce Observatory - Secrets Template
# Copy this file to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to version control!

[database]
# Database connection for employee data
host = "your-database-host.com"
port = 5432
database = "gaming_workforce_db"
username = "db_user"
password = "your-secure-password"
ssl_mode = "require"

[gaming_apis]
# Gaming industry data APIs
igda_api_key = "your-igda-api-key"
gamasutra_api_key = "your-gamasutra-api-key"
gaming_industry_salary_api = "your-salary-api-key"

[cloud_storage]
# Cloud storage for data backups
aws_access_key_id = "your-aws-access-key"
aws_secret_access_key = "your-aws-secret"
aws_bucket_name = "gaming-workforce-backups"
aws_region = "us-east-1"

[monitoring]
# Application monitoring
sentry_dsn = "your-sentry-dsn"
datadog_api_key = "your-datadog-key"
slack_webhook_url = "your-slack-webhook"

[ml_models]
# Machine Learning model configurations
model_api_endpoint = "your-ml-api-endpoint"
model_api_key = "your-ml-api-key"
prediction_threshold = 0.7

[gaming_integrations]
# Gaming industry specific integrations
jira_url = "your-jira-instance.atlassian.net"
jira_username = "your-jira-username"
jira_api_token = "your-jira-api-token"

slack_bot_token = "xoxb-your-slack-bot-token"
slack_channel_analytics = "#gaming-analytics"

confluence_url = "your-confluence.atlassian.net"
confluence_username = "your-confluence-username"
confluence_api_token = "your-confluence-api-token"

[security]
# Security configurations
jwt_secret_key = "your-jwt-secret-key-256-bits"
encryption_key = "your-fernet-encryption-key"
api_rate_limit_key = "your-rate-limit-redis-key"

[external_apis]
# External gaming industry APIs
steam_api_key = "your-steam-api-key"
epic_games_api_key = "your-epic-games-api-key"
gaming_jobs_api_key = "your-gaming-jobs-api"

# Gaming salary benchmark APIs
glassdoor_api_key = "your-glassdoor-api"
payscale_api_key = "your-payscale-api"

[email]
# Email notifications
smtp_server = "smtp.gmail.com"
smtp_port = 587
smtp_username = "your-email@gmail.com"
smtp_password = "your-app-password"

# Gaming workforce alerts
hr_email = "hr@yourgamingstudio.com"
management_email = "management@yourgamingstudio.com"
